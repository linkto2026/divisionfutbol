---
layout: layouts/base.njk
pagination:
  data: categories
  size: 1
  alias: cat
permalink: "categoria/{{ cat.slug }}/index.html"
---

<h1>{{ cat.name }}</h1>

{% set key = cat.slug %}
{% set items = collections.byCategory[key] or [] %}

{% if items.length == 0 %}
  <p>No hay noticias aún en esta categoría.</p>
{% else %}
  <ul class="list">
    {% for post in items %}
      <li>
        <a href="{{ post.url | url }}">
          <strong>{{ post.data.title }}</strong>
        </a>
        <div class="meta">{{ post.data.date | date }}</div>
      </li>
    {% endfor %}
  </ul>
{% endif %}
