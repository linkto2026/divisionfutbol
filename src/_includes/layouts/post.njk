---
layout: layouts/base.njk
---

<article>
  {% if cover %}
    <img
      src="{{ cover | url }}"
      alt="{{ title }}"
      style="width:100%;max-height:420px;object-fit:cover;margin-bottom:16px;border-radius:6px;"
    >
  {% endif %}

  <h1 style="margin-bottom:6px;">{{ title }}</h1>

  <p style="margin-top:0;color:#555;">
    {% if date %}
      <span>{{ date | date }}</span>
    {% endif %}
    {% if category %}
      <span> Â· {{ category }}</span>
    {% endif %}
  </p>

  <hr>

  {{ content | safe }}
</article>
