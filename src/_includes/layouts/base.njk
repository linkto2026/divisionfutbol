<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  {# ---------- TITLE ---------- #}
  <title>{% if title %}{{ title }} | División Fútbol{% else %}División Fútbol{% endif %}</title>

  {# ---------- SEO / SOCIAL PREVIEW (OPEN GRAPH NIVEL 2) ---------- #}
  {% set metaTitle = "División Fútbol" %}
  {% if title %}{% set metaTitle = title ~ " | División Fútbol" %}{% endif %}

  {% set metaDescription = site.defaultDescription %}
  {% if description %}{% set metaDescription = description %}{% endif %}
  {% if excerpt %}{% set metaDescription = excerpt %}{% endif %}

  {% set metaImage = site.defaultOgImage %}
  {% if image %}{% set metaImage = image %}{% endif %}
  {% if cover %}{% set metaImage = cover %}{% endif %}

  <meta name="description" content="{{ metaDescription }}">

  <meta property="og:type" content="website">
  <meta property="og:site_name" content="{{ site.name }}">
  <meta property="og:title" content="{{ metaTitle }}">
  <meta property="og:description" content="{{ metaDescription }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url | url }}">
  <meta property="og:image" content="{{ site.url }}{{ metaImage | url }}">

  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ metaTitle }}">
  <meta name="twitter:description" content="{{ metaDescription }}">
  <meta name="twitter:image" content="{{ site.url }}{{ metaImage | url }}">

  {# ---------- CSS ---------- #}
  <link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
</head>

<body>

<header class="header">
  <div class="header-inner">
    <a class="brand" href="{{ '/' | url }}">División Fútbol</a>

    <nav class="nav">
      <a href="{{ '/' | url }}">Inicio</a>
      <a href="{{ '/categoria/seleccion/' | url }}">Selección</a>
      <a href="{{ '/categoria/division-profesional/' | url }}">Div Pro</a>
      <a href="{{ '/categoria/copa-simon-bolivar/' | url }}">Simón Bolívar</a>

      <details class="nav-drop">
        <summary>ACF</summary>
        <div class="nav-drop-menu">
          <a href="{{ '/categoria/acf-primera-a/' | url }}">Primera A</a>
          <a href="{{ '/categoria/acf-primera-b/' | url }}">Primera B</a>
          <a href="{{ '/categoria/acf-ascensos/' | url }}">Ascensos</a>
        </div>
      </details>

      <a href="{{ '/categoria/internacional/' | url }}">Internacional</a>
      <a href="{{ '/categoria/automovilismo/' | url }}">Automovilismo</a>
      <a href="{{ '/categoria/otros-deportes/' | url }}">Otros</a>
    </nav>
  </div>
</header>

<main class="container">
  {{ content | safe }}
</main>

{% include "footer.njk" %}

</body>
</html>
