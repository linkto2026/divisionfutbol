---
layout: layouts/base.njk
title: Inicio
pagination:
  data: collections.posts
  size: 10
  alias: postsPage
---

<h1 class="h1">Últimas noticias</h1>

{% set featured = collections.featuredPosts[0] %}

{% if featured %}
  <section class="featured">
    {% if featured.data.cover %}
      <img src="{{ featured.data.cover | url }}" alt="{{ featured.data.title }}">
    {% endif %}

    <h2>
      <a href="{{ featured.url | url }}">{{ featured.data.title }}</a>
    </h2>

    <div class="meta">
      {{ featured.data.date | date }}
      {% if featured.data.category %} · {{ featured.data.category }}{% endif %}
    </div>

    {% if featured.data.excerpt %}
      <p>{{ featured.data.excerpt }}</p>
    {% endif %}
  </section>

  <div class="hr"></div>
{% endif %}

<ul class="list">
  {% for post in postsPage %}
    {% if not post.data.featured %}
      <li>
        <a href="{{ post.url | url }}"><strong>{{ post.data.title }}</strong></a>
        <div class="meta">
          {{ post.data.date | date }}
          {% if post.data.category %} · {{ post.data.category }}{% endif %}
        </div>
      </li>
    {% endif %}
  {% endfor %}
</ul>

<div class="hr"></div>

<nav class="meta" style="display:flex;justify-content:space-between;">
  <div>
    {% if pagination.href.previous %}
      <a href="{{ pagination.href.previous | url }}">← Anterior</a>
    {% endif %}
  </div>

  <div>
    Página {{ pagination.pageNumber + 1 }} de {{ pagination.pages.length }}
  </div>

  <div>
    {% if pagination.href.next %}
      <a href="{{ pagination.href.next | url }}">Siguiente →</a>
    {% endif %}
  </div>
</nav>
