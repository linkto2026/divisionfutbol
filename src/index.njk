---
layout: layouts/base.njk
title: Inicio
---

{% set featured = collections.featuredPosts[0] %}

<div class="grid">
  <section>
    {% if featured %}
      <article class="hero">
        {% if featured.data.cover %}
          <img src="{{ featured.data.cover | url }}">
        {% endif %}
        <div class="hero-content">
          <div class="category">{{ featured.data.category }}</div>
          <h1>{{ featured.data.title }}</h1>
          {% if featured.data.excerpt %}
            <p>{{ featured.data.excerpt }}</p>
          {% endif %}
          <a href="{{ featured.url | url }}" style="margin-top:10px;color:#fff;font-weight:700;">
            Leer más →
          </a>
        </div>
      </article>
    {% endif %}
  </section>

  <aside class="sidebar">
    <h3>Últimas Noticias</h3>
    {% for post in collections.posts | slice(0,5) %}
      <div class="side-item">
        {% if post.data.cover %}
          <img src="{{ post.data.cover | url }}">
        {% endif %}
        <div>
          <span>{{ post.data.date | date }}</span><br>
          <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        </div>
      </div>
    {% endfor %}
  </aside>
</div>

<h2 style="margin-top:40px;">Tendencias</h2>

<section class="cards">
  {% for post in collections.posts | slice(1,5) %}
    <article class="card">
      {% if post.data.cover %}
        <img src="{{ post.data.cover | url }}">
      {% endif %}
      <div class="card-body">
        <div class="category">{{ post.data.category }}</div>
        <h4>
          <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        </h4>
      </div>
    </article>
  {% endfor %}
</section>
